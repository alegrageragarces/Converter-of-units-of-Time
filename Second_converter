// This program converts the time of the day to calculate the amount of seconds that have passed since 00:00
// Its great to avoid procrastination
#include <stdio.h>
int main()
{
int hours, minutes, seconds, total;

printf("Enter hours: ");
scanf("%d", &hours);

printf("Enter minutes: ");
scanf("%d", &minutes);

printf("Enter seconds: ");
scanf("%d", &seconds);

total = hours * 3600 + minutes * 60 + seconds;

printf("\n %d seconds have passed since 00:00.", total);

return 0;

}
